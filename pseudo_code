    bool final_roll;
    
    char decision;
    print (Welcome to a game of Craps and Explanation of the game)
    print (press y to roll and n to exit)
    cin >> decision;
    WHILE (decision == 'y' || decision == 'Y')
    {
        final_roll = false; 
        WHILE (final_roll == false)
        {
           dice_sum = die_1 + die_2;
           cout << "You rolled a " << die_1 << "and a " << die_2;
           IF (dice_sum == 7 || dice_sum == 11)
           {
               cout << "Your sum was " << dice_sum << "Congraulations You Won" << endl; break;
               final_roll = true
           }
           ELSE IF (dice_sum == 2 || dice_sum = 3 || dice_sum = 12)
           {
              cout << "Your sum was " << dice_sum << "Sorry but you lost" << endl;
                final roll = true
           }
        }
        cout << "Do you want to roll again? (Y/N) ";
        cin >> decision;
    }

}